      <switch mapping="OnOff" styling="GreyGreen">
        <label>Follow me</label>
        <address transform="DPT:1.001" variant="">12/1/6</address>
      </switch>
      <switch mapping="OnOff" styling="GreyGreen">
        <layout colspan="3" />
        <label>Abwesend</label>

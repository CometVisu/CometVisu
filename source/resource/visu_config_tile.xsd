  <xsd:simpleType name="addr">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">The GA (like: 12/0/7) for KNX-backends, the item name for openHAB-backend or the MQTT topic</xsd:documentation>
      <xsd:documentation xml:lang="de">Die Gruppenadresse (z.B: 12/0/7) bei KNX-Backends, der Item-Name beim openHAB-Backend oder das Topic bei MQTT.</xsd:documentation>
    </xsd:annotation>
    <xsd:restriction base="xsd:token">
      <xsd:pattern value="[0-9]{1,2}/[0-9]{1,2}/[0-9]{1,3}|\{{0,3}\s*[A-Za-z][A-Za-z0-9_\-\.:\{\}\s]*\s*\}{0,3}|$?([a-zA-Z0-9+#_\- ]+/)*[a-zA-Z0-9+#_\- ]+" />
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:simpleType name="dimension">
    <xsd:restriction base="xsd:string" />
  </xsd:simpleType>

  <xsd:simpleType name="uri">
    <xsd:restriction base="xsd:anyURI" />
  </xsd:simpleType>

  <xsd:complexType name="address">
    <xsd:simpleContent>
      <xsd:extension base="addr">
        <xsd:attribute ref="transform" />
        <xsd:attribute ref="mode" />
        <xsd:attribute name="value" type="xsd:string">
          <xsd:annotation>
            <xsd:documentation xml:lang="en">Fixed value sent to this address.</xsd:documentation>
            <xsd:documentation xml:lang="de">Fixer Wert welcher an diese Adresse gesendet wird.</xsd:documentation>
          </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="on">
          <xsd:annotation>
            <xsd:documentation xml:lang="en">Event on which a ``value`` should be sent to this address (only useful in mode=``write or ``readwrite`), also needs ``value``.</xsd:documentation>
            <xsd:documentation xml:lang="de">Event bei dem ein Wert and diese Adresse geschickt wird (nur in Verbindung mit ``value`` und mode=``read`` oder ``readwrite``).</xsd:documentation>
          </xsd:annotation>
          <xsd:simpleType>
            <xsd:restriction base="xsd:string">
              <xsd:enumeration value="click" />
              <xsd:enumeration value="down" />
              <xsd:enumeration value="up" />
            </xsd:restriction>
          </xsd:simpleType>
        </xsd:attribute>
        <xsd:attribute name="target" type="xsd:string">
          <xsd:annotation>
            <xsd:documentation xml:lang="en">Target in the parent widget the value if this address should be use for. The possible values depend on the parent widget.</xsd:documentation>
            <xsd:documentation xml:lang="de">Ziel innerhalb der Eltern-Widgets für das die Werte dieser Adresse benutzt werden sollen. Die möglichen Werte hängen vom Eltern-Widget ab.</xsd:documentation>
          </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="format-pos" type="xsd:decimal">
          <xsd:annotation>
            <xsd:documentation xml:lang="en">Position for format string when multiple addresses are used.</xsd:documentation>
            <xsd:documentation xml:lang="de">Position für Format-String wenn mehrere Adressen gleichzeitig genutzt werden.</xsd:documentation>
          </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="qos" type="xsd:decimal">
          <xsd:annotation>
            <xsd:documentation xml:lang="en">Only MQTT: QoS</xsd:documentation>
            <xsd:documentation xml:lang="de">Nur MQTT: QoS</xsd:documentation>
          </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="retain" type="xsd:boolean">
          <xsd:annotation>
            <xsd:documentation xml:lang="en">Only MQTT: retain flag</xsd:documentation>
            <xsd:documentation xml:lang="de">Nur MQTT: retain Flag</xsd:documentation>
          </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="selector" type="xsd:string">
          <xsd:annotation>
            <xsd:documentation xml:lang="en">Only MQTT: JSON selector</xsd:documentation>
            <xsd:documentation xml:lang="de">Nur MQTT: JSON Selektor</xsd:documentation>
          </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="backend" type="xsd:string">
          <xsd:annotation>
            <xsd:documentation xml:lang="en">Optional name of the backend this address belongs to.</xsd:documentation>
            <xsd:documentation xml:lang="de">Optionaler Name des Backends zu dem diese Adresse gehört.</xsd:documentation>
          </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute ref="mapping"/>
        <xsd:attribute ref="format"/>
        <xsd:attribute name="delay" type="xsd:positiveInteger">
          <xsd:annotation>
            <xsd:documentation xml:lang="en">Optional delay in milliseconds that a write-request to this address is delayed.</xsd:documentation>
            <xsd:documentation xml:lang="de">Optionales delay in Millisekunden, um welches das Schreiben an diese Adresse verzögert wird.</xsd:documentation>
            <xsd:appinfo>level:expert</xsd:appinfo>
          </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="send-mode" default="on-change">
          <xsd:annotation>
            <xsd:documentation xml:lang="en">Usually the elements that are using this address receive an update-event only when that value hast changed (``on-change``). This check can be disabled ``always`` to send the update-event every time when a new value has been received from the backend.</xsd:documentation>
            <xsd:documentation xml:lang="de">Normalerweise bekommen Elemente, die diese Adresse benutzen nur eine Update-Benachrichtigung, wenn sich der Wert tatsächlich geändert hat (``on-change``). Mit ``always`` wird diese Überprüfung umgangen und die Update-Benachrichtigung jedes Mal geschickt, wenn ein neuer Wert vom Backend empfangen wurde.</xsd:documentation>
            <xsd:appinfo>level:expert</xsd:appinfo>
          </xsd:annotation>
          <xsd:simpleType>
            <xsd:restriction base="xsd:string">
              <xsd:enumeration value="on-change" />
              <xsd:enumeration value="always" />
            </xsd:restriction>
          </xsd:simpleType>
        </xsd:attribute>
      </xsd:extension>
    </xsd:simpleContent>
  </xsd:complexType>

  <xsd:complexType name="slot-span" mixed="true">
    <xsd:attribute ref="slot"/>
    <xsd:attribute ref="tr"/>
  </xsd:complexType>

  <xsd:complexType name="label-span" mixed="true">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element name="cv-icon" type="cv-icon"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attribute name="slot">
      <xsd:simpleType>
        <xsd:restriction base="xsd:string">
          <xsd:enumeration value="primaryLabel" />
          <xsd:enumeration value="secondaryLabel" />
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
    <xsd:attribute ref="tr"/>
  </xsd:complexType>

  <xsd:complexType name="entry" mixed="true">
    <xsd:annotation>
      <xsd:appinfo>descriptor:#text</xsd:appinfo>
    </xsd:annotation>
    <xsd:choice minOccurs="0" maxOccurs="unbounded">
      <xsd:element name="cv-icon" type="cv-icon" />
    </xsd:choice>
    <xsd:attribute ref="value" />
    <xsd:attributeGroup ref="range" />
    <xsd:attribute name="default" type="xsd:boolean" >
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Marks the entry as being the default entry in case of non-existing applicable entries.</xsd:documentation>
        <xsd:documentation xml:lang="de">Markiert den Entry als Standard-Entry für den Fall, dass kein anderer passender Entry gefunden werden kann.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="cv-loader">
    <xsd:attribute name="type">
      <xsd:simpleType>
        <xsd:restriction base="xsd:string">
          <xsd:enumeration value="css" />
          <xsd:enumeration value="js" />
          <xsd:enumeration value="templates" />
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
    <xsd:attribute name="src" type="xsd:anyURI" />
  </xsd:complexType>


  <xsd:simpleType name="color">
    <xsd:restriction base="xsd:token">
      <xsd:pattern value="[a-z]+|#[\da-fA-F]{6}([\da-fA-F]{2})?|rgb\(([0-1]?[0-9]?[0-9]|2[0-5][0-5]),\s?([0-1]?[0-9]?[0-9]|2[0-5][0-5]),\s?([0-1]?[0-9]?[0-9]|2[0-5][0-5])\)?|rgba\(([0-1]?[0-9]?[0-9]|2[0-5][0-5]),\s?([0-1]?[0-9]?[0-9]|2[0-5][0-5]),\s?([0-1]?[0-9]?[0-9]|2[0-5][0-5]),\s?(1|1.0|0\.[0-9]+)\)?"/>
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:simpleType name="tile-size">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Size of the tile in {columns}x{rows}, 1x1 is the default size.</xsd:documentation>
      <xsd:documentation xml:lang="de">Größe der Kachel in {Spalten}x{Zeilen}, 1x1 ist die Standardgröße.</xsd:documentation>
    </xsd:annotation>
    <xsd:restriction base="xsd:string">
      <xsd:enumeration value="button" />
      <xsd:enumeration value="0.5x0.5" />
      <xsd:enumeration value="1x0.5" />
      <xsd:enumeration value="2x1" />
      <xsd:enumeration value="1x2" />
      <xsd:enumeration value="2x2" />
      <xsd:enumeration value="2x4" />
      <xsd:enumeration value="4x2" />
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:simpleType name="button-size">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Defines the button size.</xsd:documentation>
      <xsd:documentation xml:lang="de">Legt die Größe des Buttons fest.</xsd:documentation>
    </xsd:annotation>
    <xsd:restriction base="xsd:string">
      <xsd:enumeration value="small" />
      <xsd:enumeration value="normal" />
      <xsd:enumeration value="large" />
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:simpleType name="series-selection">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Type of the chart element.</xsd:documentation>
      <xsd:documentation xml:lang="de">Typ des Chart-Elements.</xsd:documentation>
    </xsd:annotation>
      <xsd:restriction base="xsd:string">
      </xsd:restriction>
  </xsd:simpleType>

  <xsd:complexType name="cv-state-notification">
    <xsd:sequence>
      <xsd:choice maxOccurs="unbounded">
        <xsd:element name="cv-title-template" minOccurs="0" type="xsd:string">
          <xsd:annotation>
            <xsd:documentation xml:lang="en">Template for message title</xsd:documentation>
            <xsd:documentation xml:lang="de">Vorlage für Nachrichtentitel</xsd:documentation>
          </xsd:annotation>
        </xsd:element>
        <xsd:element name="cv-addresses" type="cv-addresses" />
        <xsd:element name="cv-message-template" type="xsd:string">
          <xsd:annotation>
            <xsd:documentation xml:lang="en">Template for message content</xsd:documentation>
            <xsd:documentation xml:lang="de">Vorlage für Nachrichteninhalt</xsd:documentation>
          </xsd:annotation>
        </xsd:element>
        <xsd:element name="cv-condition" minOccurs="0" type="xsd:string">
          <xsd:annotation>
            <xsd:documentation xml:lang="en">Show message only when incoming data equals the condition</xsd:documentation>
            <xsd:documentation xml:lang="de">Nachricht nur anzeigen, wenn Wert diesem gleicht</xsd:documentation>
          </xsd:annotation>
        </xsd:element>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attribute name="id" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">ID that can be used in addresses to manipulate this notification.</xsd:documentation>
        <xsd:documentation xml:lang="de">ID die in Adressen benutzt werden kann, um diese Nachricht zu verändern</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="name" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Name is required when unique=true</xsd:documentation>
        <xsd:documentation xml:lang="de">Name muss definiert werden, wenn unique=true ist</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="target">
      <xsd:simpleType>
        <xsd:annotation>
          <xsd:documentation xml:lang="en">Where to show the message</xsd:documentation>
          <xsd:documentation xml:lang="de">Wo die Nachricht angezeigt werden soll</xsd:documentation>
        </xsd:annotation>
        <xsd:restriction base="xsd:string">
          <xsd:enumeration value="popup">
            <xsd:annotation>
              <xsd:documentation xml:lang="en">Show message as popup</xsd:documentation>
              <xsd:documentation xml:lang="de">Nachricht als Popup anzeigen</xsd:documentation>
            </xsd:annotation>
          </xsd:enumeration>
          <xsd:enumeration value="notificationCenter">
            <xsd:annotation>
              <xsd:documentation xml:lang="en">Show message in notification center</xsd:documentation>
              <xsd:documentation xml:lang="de">Nachricht im Notification-Center anzeigen</xsd:documentation>
            </xsd:annotation>
          </xsd:enumeration>
          <xsd:enumeration value="speech">
            <xsd:annotation>
              <xsd:documentation xml:lang="en">Say message with text-to-speech</xsd:documentation>
              <xsd:documentation xml:lang="de">Nachricht per Sprachausgabe ausgeben</xsd:documentation>
            </xsd:annotation>
          </xsd:enumeration>
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
    <xsd:attribute name="unique" type="xsd:boolean" default="false">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Show only one message for this update (name is required)</xsd:documentation>
        <xsd:documentation xml:lang="de">Nur eine Nachricht für dieses Update zeigen (name muss angegeben werden)</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="deletable" type="xsd:boolean" default="true">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">User can delete this message</xsd:documentation>
        <xsd:documentation xml:lang="de">Benutzer kann diese Nachricht löschen</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="enabled" type="xsd:boolean" default="true">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">User can delete this message</xsd:documentation>
        <xsd:documentation xml:lang="de">Aktiviert diese Nachricht</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="skip-initial" type="xsd:boolean" default="true">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Ignore initial state update</xsd:documentation>
        <xsd:documentation xml:lang="de">Erstes Statusupdate ignorieren</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="severity" default="normal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Messages with higher priority are marked with different colors</xsd:documentation>
        <xsd:documentation xml:lang="de">Nachrichten mit höherer Priorität werden farblich gekennzeichnet</xsd:documentation>
      </xsd:annotation>
      <xsd:simpleType>
        <xsd:restriction base="xsd:string">
          <xsd:enumeration value="urgent" />
          <xsd:enumeration value="high" />
          <xsd:enumeration value="normal" />
          <xsd:enumeration value="low" />
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
    <xsd:attribute name="icon" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Show this icon with the message.</xsd:documentation>
        <xsd:documentation xml:lang="de">Zeigt dieses Icon zusammen mit der Nachricht.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="icon-classes" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Additional CSS-classes to customize the icon.</xsd:documentation>
        <xsd:documentation xml:lang="de">Zusätzliche CSS-klassen mit denen das Aussehen des Icons angepasst werden kann.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="cv-addresses">
    <xsd:sequence minOccurs="1" maxOccurs="unbounded">
      <xsd:element name="cv-address" type="address" />
    </xsd:sequence>
    <xsd:attribute name="value-mapping" type="xsd:string" />
    <xsd:attribute name="address-mapping" type="xsd:string" />
  </xsd:complexType>

  <xsd:complexType name="dataset" mixed="true">
    <xsd:attribute name="src" type="xsd:anyURI">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Data source for this chart element</xsd:documentation>
        <xsd:documentation xml:lang="de">Datenquelle für dieses Chart-Element.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="title" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Title of the chart element.</xsd:documentation>
        <xsd:documentation xml:lang="de">Titel des Chart-Elements.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute ref="chart-type" />
    <xsd:attribute ref="curve"/>
    <xsd:attribute name="color" type="color">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Color of the chart element.</xsd:documentation>
        <xsd:documentation xml:lang="de">Farbe des Chart-Elements.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="show-area" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Fill the area below a line diagram.</xsd:documentation>
        <xsd:documentation xml:lang="de">Bereich unterhalb eines Liniendiagramms ausfüllen.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="line">
    <xsd:attribute name="src" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Data source for this line</xsd:documentation>
        <xsd:documentation xml:lang="de">Datenquelle für diese Linie</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="value">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Type of the chart element.</xsd:documentation>
        <xsd:documentation xml:lang="de">Typ des Chart-Elements.</xsd:documentation>
      </xsd:annotation>
      <xsd:simpleType>
        <xsd:union>
          <xsd:simpleType>
            <xsd:restriction base="xsd:float"/>
          </xsd:simpleType>
          <xsd:simpleType>
            <xsd:restriction base="xsd:string">
              <xsd:enumeration value="avg" />
              <xsd:enumeration value="min" />
              <xsd:enumeration value="max" />
            </xsd:restriction>
          </xsd:simpleType>
        </xsd:union>
      </xsd:simpleType>
    </xsd:attribute>
    <xsd:attribute ref="format"/>
    <xsd:attribute name="color" type="color">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Color of the line.</xsd:documentation>
        <xsd:documentation xml:lang="de">Farbe der Linie.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="show-value" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Show value.</xsd:documentation>
        <xsd:documentation xml:lang="de">Wert anzeigen</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="value-color" type="color">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Color of the value.</xsd:documentation>
        <xsd:documentation xml:lang="de">Farbe des Werts.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <!--
  #####################################################################################################################
  # END: simple types
  #####################################################################################################################
  # -->

  <!--
  #####################################################################################################################
  # START: attributes
  #####################################################################################################################
  # -->

  <xsd:attribute name="min" type="xsd:decimal">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Minimum value.</xsd:documentation>
      <xsd:documentation xml:lang="de">Minimaler Wert.</xsd:documentation>
    </xsd:annotation>
  </xsd:attribute>
  <xsd:attribute name="max" type="xsd:decimal">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Maximum value.</xsd:documentation>
      <xsd:documentation xml:lang="de">Maximaler Wert.</xsd:documentation>
    </xsd:annotation>
  </xsd:attribute>
  <xsd:attribute name="step-width" type="xsd:decimal">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Step with.</xsd:documentation>
      <xsd:documentation xml:lang="de">Schrittgröße.</xsd:documentation>
    </xsd:annotation>
  </xsd:attribute>

  <xsd:attribute name="slot" type="xsd:string"/>
  <xsd:attribute name="tr" type="xsd:boolean">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Defines that the text content of this element should be translated.</xsd:documentation>
      <xsd:documentation xml:lang="de">Legt fest, dass der Text-Inhalt dieses Elements übersetzt werden soll.</xsd:documentation>
      <xsd:appinfo>level:expert</xsd:appinfo>
    </xsd:annotation>
  </xsd:attribute>

  <xsd:attribute name="transform" type="xsd:string">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Defines the datatype in the backend, e.g. DPT:1.001 for KNX datapoint type 1.001.</xsd:documentation>
      <xsd:documentation xml:lang="de">Legt den Datentyp im Backend fest, z.B. DPT:1.001 für den KNX Datenpunkttyp 1.001.</xsd:documentation>
    </xsd:annotation>
  </xsd:attribute>
  <xsd:attribute name="format" type="xsd:string">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Formatting of the value (printf syntax).</xsd:documentation>
      <xsd:documentation xml:lang="de">Formatierung des Wertes (printf-Syntax).</xsd:documentation>
    </xsd:annotation>
  </xsd:attribute>

  <xsd:attributeGroup name="range">
    <xsd:attribute name="range-min" type="xsd:float" />
    <xsd:attribute name="range-max" type="xsd:float" />
  </xsd:attributeGroup>

  <xsd:attributeGroup name="layout-attributes">
    <xsd:attribute ref="row"/>
    <xsd:attribute ref="column"/>
    <xsd:attribute ref="rowspan"/>
    <xsd:attribute ref="colspan"/>
  </xsd:attributeGroup>

  <xsd:attributeGroup name="proxy-attributes">
    <xsd:attribute name="proxy" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Use a proxy to avoid loading errors or credentials from the hidden config.</xsd:documentation>
        <xsd:documentation xml:lang="de">Proxy im Backend benutzen, um Ladefehler zu vermeiden oder Zugangsdaten aus den versteckten Konfiguration zu nutzen.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="auth-type">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Type of authentication, if needed.</xsd:documentation>
        <xsd:documentation xml:lang="de">Art der Authentifizierung, falls erforderlich.</xsd:documentation>
      </xsd:annotation>
      <xsd:simpleType>
        <xsd:restriction base="xsd:string">
          <xsd:enumeration value="basic" />
          <xsd:enumeration value="bearer" />
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
    <xsd:attribute name="config-section" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Use uri and credentials from this section of the hidden config.</xsd:documentation>
        <xsd:documentation xml:lang="de">Uri und Zugangsdaten aus dieser Sektion der versteckten Konfiguration verwenden.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="username" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Username for authentication (or token for auth-type=bearer).</xsd:documentation>
        <xsd:documentation xml:lang="de">Benutzername für die Authentifizierung (oder token für auth-type=bearer).</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="password" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Password for authentication.</xsd:documentation>
        <xsd:documentation xml:lang="de">Passwort für die Authentifizierung.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="self-signed" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Disable certificate validation to allow loading pages with self-signed certificates.</xsd:documentation>
        <xsd:documentation xml:lang="de">Zertifikatsprüfung deaktivieren, um Seiten mit selbst-signierten Zertifikaten laden zu können..</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:attributeGroup>

  <xsd:attribute name="mapping" type="xsd:string">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Map the bus value to a different value, text or symbol for displaying. See also :ref:`mapping &lt;tile-element-mapping&gt;`</xsd:documentation>
      <xsd:documentation xml:lang="de">Ordnet den Werten vom Bus andere Werte, Texte oder Symbole zur Anzeige zu. Siehe auch :ref:`Mapping &lt;tile-element-mapping&gt;`</xsd:documentation>
    </xsd:annotation>
  </xsd:attribute>

  <xsd:attribute name="progress-mapping" type="xsd:string">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Map the bus value to a value between 0 and 100 to display a progress :ref:`mapping &lt;tile-element-mapping&gt;`</xsd:documentation>
      <xsd:documentation xml:lang="de">Ordnet den Werten vom Bus einen Wert zwischen 0 und 100 zu, um einen Fortschritt anzeigen zu können. Siehe auch :ref:`Mapping &lt;tile-element-mapping&gt;`</xsd:documentation>
    </xsd:annotation>
  </xsd:attribute>

  <xsd:attribute name="styling" type="xsd:string">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Change the color of the displayed value depending on its value. See also :ref:`styling &lt;tile-element-styling&gt;`</xsd:documentation>
      <xsd:documentation xml:lang="de">Ändert die Farbe des angezeigten Wertes abhängig vom Wert selbst. Siehe auch :ref:`Styling &lt;tile-element-styling&gt;`</xsd:documentation>
    </xsd:annotation>
  </xsd:attribute>
  <xsd:attribute name="value" type="xsd:string" />

  <xsd:attribute name="mode">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Defines if this address is only used to ``read``, ``write``, both ``readwrite`` or none of them ``disable`.</xsd:documentation>
      <xsd:documentation xml:lang="de">Legt fest, ob auf dieser Adresse nur gelesen ``read``, geschrieben ``write``, beides ``readwrite`` oder nichts davon ``disable`` werden soll</xsd:documentation>
    </xsd:annotation>
    <xsd:simpleType>
      <xsd:restriction base="xsd:string">
        <xsd:enumeration value="disable" />
        <xsd:enumeration value="read" />
        <xsd:enumeration value="write" />
        <xsd:enumeration value="readwrite" />
      </xsd:restriction>
    </xsd:simpleType>
  </xsd:attribute>


  <xsd:attributeGroup name="appearance-attributes">
    <xsd:attribute ref="visible-on"/>
    <xsd:attribute ref="class"/>
    <xsd:attribute ref="style"/>
  </xsd:attributeGroup>

  <xsd:attribute name="visible-on">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Controls this element's visibility by screen size.</xsd:documentation>
      <xsd:documentation xml:lang="de">Steuert die Sichtbarkeit dieses Elements anhand der Bildschirmgröße.</xsd:documentation>
    </xsd:annotation>
    <xsd:simpleType>
      <xsd:restriction base="xsd:string">
        <xsd:enumeration value="mobile" />
        <xsd:enumeration value="desktop" />
      </xsd:restriction>
    </xsd:simpleType>
  </xsd:attribute>

  <xsd:attribute name="class" type="xsd:string">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Add this value to the CSS class so that it can be formatted by a user provided style sheet.</xsd:documentation>
      <xsd:documentation xml:lang="de">Füge dieses Attribut der CSS Klasse hinzu, so dass das Widget durch ein eigenes Stylesheet zusätzlich formatiert werden kann.</xsd:documentation>
      <xsd:appinfo>level:expert</xsd:appinfo>
    </xsd:annotation>
  </xsd:attribute>

  <xsd:attribute name="refresh" type="xsd:decimal">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Time interval in seconds this widget is being refreshed.</xsd:documentation>
      <xsd:documentation xml:lang="de">Zeitintervall in Sekunden in dem dieses Widget aktualisiert wird.</xsd:documentation>
      <xsd:appinfo>level:expert</xsd:appinfo>
    </xsd:annotation>
  </xsd:attribute>

  <xsd:attribute name="style" type="xsd:string">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Custom CSS style rules for this widget.</xsd:documentation>
      <xsd:documentation xml:lang="de">Individuelle CSS style Regeln für dieses Widget.</xsd:documentation>
      <xsd:appinfo>level:expert</xsd:appinfo>
    </xsd:annotation>
  </xsd:attribute>

  <xsd:attribute name="align">
    <xsd:simpleType>
      <xsd:restriction base="xsd:string">
        <xsd:enumeration value="left" />
        <xsd:enumeration value="right" />
        <xsd:enumeration value="center" />
      </xsd:restriction>
    </xsd:simpleType>
  </xsd:attribute>
  <xsd:attribute name="variant" type="xsd:string" />

  <xsd:attribute name="row" default="1">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Row number or position (first, middle, last)</xsd:documentation>
      <xsd:documentation xml:lang="de">Zeilennummer oder Position (first, middle, last)</xsd:documentation>
    </xsd:annotation>
    <xsd:simpleType>
      <xsd:restriction base="xsd:string">
        <xsd:enumeration value="1" />
        <xsd:enumeration value="2" />
        <xsd:enumeration value="3" />
        <xsd:enumeration value="first" />
        <xsd:enumeration value="middle" />
        <xsd:enumeration value="last" />
      </xsd:restriction>
    </xsd:simpleType>
  </xsd:attribute>
  <xsd:attribute name="column" default="1">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Column number or position (first, middle, last)</xsd:documentation>
      <xsd:documentation xml:lang="de">Spaltennummer oder Position (first, middle, last)</xsd:documentation>
    </xsd:annotation>
    <xsd:simpleType>
      <xsd:restriction base="xsd:string">
        <xsd:enumeration value="1" />
        <xsd:enumeration value="2" />
        <xsd:enumeration value="3" />
        <xsd:enumeration value="first" />
        <xsd:enumeration value="middle" />
        <xsd:enumeration value="last" />
      </xsd:restriction>
    </xsd:simpleType>
  </xsd:attribute>
  <xsd:attribute name="rowspan">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Number of rows this element spans</xsd:documentation>
      <xsd:documentation xml:lang="de">Anzahl der Zeilen die dieses Element belegt</xsd:documentation>
    </xsd:annotation>
    <xsd:simpleType>
      <xsd:restriction base="xsd:integer">
        <xsd:minInclusive value="1"/>
        <xsd:maxInclusive value="3"/>
      </xsd:restriction>
    </xsd:simpleType>
  </xsd:attribute>
  <xsd:attribute name="colspan">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Number of columns this element spans</xsd:documentation>
      <xsd:documentation xml:lang="de">Anzahl der Spalten die dieses Element belegt</xsd:documentation>
    </xsd:annotation>
    <xsd:simpleType>
      <xsd:restriction base="xsd:integer">
        <xsd:minInclusive value="1"/>
        <xsd:maxInclusive value="3"/>
      </xsd:restriction>
    </xsd:simpleType>
  </xsd:attribute>

  <xsd:attribute name="whole-tile" type="xsd:boolean">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Augments the clickable area to the whole tile.</xsd:documentation>
      <xsd:documentation xml:lang="de">Erweitert den klickbaren Bereich auf die gesamte Kachel.</xsd:documentation>
    </xsd:annotation>
  </xsd:attribute>

  <xsd:attribute name="series">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Time span of the data.</xsd:documentation>
      <xsd:documentation xml:lang="de">Zeitspanne der Daten.</xsd:documentation>
    </xsd:annotation>
    <xsd:simpleType>
      <xsd:restriction base="xsd:string">
        <xsd:enumeration value="hour"/>
        <xsd:enumeration value="day"/>
        <xsd:enumeration value="week"/>
        <xsd:enumeration value="month"/>
        <xsd:enumeration value="year"/>
      </xsd:restriction>
    </xsd:simpleType>
  </xsd:attribute>

  <xsd:attribute name="curve">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Type of curve interpolation for line charts.</xsd:documentation>
      <xsd:documentation xml:lang="de">Typ der Kurven-Interpolation eines Linien-Charts.</xsd:documentation>
    </xsd:annotation>
    <xsd:simpleType>
      <xsd:restriction base="xsd:string">
        <xsd:enumeration value="linear" />
        <xsd:enumeration value="step" />
        <xsd:enumeration value="natural" />
      </xsd:restriction>
    </xsd:simpleType>
  </xsd:attribute>

  <xsd:attribute name="chart-type">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Type of the chart element.</xsd:documentation>
      <xsd:documentation xml:lang="de">Typ des Chart-Elements.</xsd:documentation>
    </xsd:annotation>
    <xsd:simpleType>
      <xsd:restriction base="xsd:string">
        <xsd:enumeration value="line" />
        <xsd:enumeration value="bar" />
      </xsd:restriction>
    </xsd:simpleType>
  </xsd:attribute>

  <xsd:attribute name="zero-based" type="xsd:boolean" default="true">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Always start the x-axis at 0.</xsd:documentation>
      <xsd:documentation xml:lang="de">Die y-Achse immer bei 0 beginnen lassen.</xsd:documentation>
    </xsd:annotation>
  </xsd:attribute>

  <xsd:attribute name="hide-on-scroll" type="xsd:boolean" default="false">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Fades out this content, if the page content has been scrolled.</xsd:documentation>
      <xsd:documentation xml:lang="de">Blendet dieses Element aus, wenn der Seiteninhalt gescrollt wurde.</xsd:documentation>
    </xsd:annotation>
  </xsd:attribute>

  <!--
  #####################################################################################################################
  # END: attributes
  #####################################################################################################################
  # -->

  <!--
  #####################################################################################################################
  # START: allowed HTML elements
  #####################################################################################################################
  # -->

  <xsd:complexType name="label" mixed="true">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element name="cv-icon" type="cv-icon"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute ref="tr"/>
    <xsd:attribute name="value-size">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Defines the font size.</xsd:documentation>
        <xsd:documentation xml:lang="de">Legt die Schriftgröße fest.</xsd:documentation>
      </xsd:annotation>
      <xsd:simpleType>
        <xsd:restriction base="xsd:string">
          <xsd:enumeration value="small" />
          <xsd:enumeration value="medium" />
          <xsd:enumeration value="normal" />
          <xsd:enumeration value="large" />
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="text">
    <xsd:simpleContent>
      <xsd:extension base="xsd:string">
        <xsd:attributeGroup ref="appearance-attributes" />
        <xsd:attribute ref="tr"/>
      </xsd:extension>
    </xsd:simpleContent>
  </xsd:complexType>

  <xsd:complexType name="p" mixed="true">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element name="label" type="label"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attributeGroup ref="appearance-attributes" />
  </xsd:complexType>

  <xsd:complexType name="summary">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:group ref="Components"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attributeGroup ref="appearance-attributes" />
  </xsd:complexType>

  <xsd:complexType name="meter">
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute name="min" type="xsd:integer"/>
    <xsd:attribute name="max" type="xsd:integer"/>
    <xsd:attribute name="value" type="xsd:integer"/>
  </xsd:complexType>

  <xsd:complexType name="template">
    <xsd:sequence>
      <xsd:any processContents="lax"/>
    </xsd:sequence>
    <xsd:attribute name="target">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Defines the target, where new list elements are added. Usually an extra &lt;ul&gt; element is created for that.</xsd:documentation>
        <xsd:documentation xml:lang="de">Legt das Ziel fest, in dem die Listen-Elemente erzeugt werden sollen. Normalerweise wird dafür ein extra &lt;ul&gt; Element erzeugt.</xsd:documentation>
      </xsd:annotation>
      <xsd:simpleType>
        <xsd:restriction base="xsd:string">
          <xsd:enumeration value="parent" />
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="custom">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Custom HTML section where any content is allowed and no validation takes place.</xsd:documentation>
      <xsd:documentation xml:lang="de">Individueller HTML-Bereich in dem jedes Element erlaubt ist und keine Validierung stattfindet.</xsd:documentation>
    </xsd:annotation>
    <xsd:sequence>
      <xsd:any processContents="lax"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="html-style" >
    <xsd:annotation>
      <xsd:documentation xml:lang="en">The style element contains style information for a document, or part of a document.</xsd:documentation>
      <xsd:documentation xml:lang="de">Das style-Element enthält Stylesheet-Angaben, die für das gesamte Dokument gelten.</xsd:documentation>
    </xsd:annotation>
    <xsd:simpleContent>
      <xsd:extension base="xsd:string">
        <xsd:attribute name="media" default="all" type="xsd:string"/>
      </xsd:extension>
    </xsd:simpleContent>
  </xsd:complexType>

  <xsd:complexType name="iframe">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">An iframe allows other websites to be embedded.</xsd:documentation>
      <xsd:documentation xml:lang="de">Ein iframe erlaubt die Einbettung anderer Webseiten.</xsd:documentation>
    </xsd:annotation>
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute name="src" type="xsd:anyURI"/>
    <xsd:attribute name="data-src" type="xsd:anyURI"/>
  </xsd:complexType>

  <!--
  #####################################################################################################################
  # END: allowed HTML elements
  #####################################################################################################################
  # -->

  <!--
  #####################################################################################################################
  # START: Plugins
  #####################################################################################################################
  # -->

  <xsd:complexType name="plugin-openweathermap">
    <xsd:attribute name="lang">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">
          Language / format of the date
        </xsd:documentation>
        <xsd:documentation xml:lang="de">
          Sprache / Datum-Formatierung
        </xsd:documentation>
      </xsd:annotation>
      <xsd:simpleType>
        <xsd:restriction base="xsd:string">
          <xsd:enumeration value="en" />
          <xsd:enumeration value="de" />
          <xsd:enumeration value="fr" />
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
    <xsd:attribute name="appid" type="xsd:string" use="required">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">
          Personal access key as obtained from https://openweathermap.org/
        </xsd:documentation>
        <xsd:documentation xml:lang="de">
          Persönlicher Zugriffsschlüssel von https://openweathermap.org/
        </xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="description" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">
          Describing text, displays the place name when left empty. "false" disables the display
        </xsd:documentation>
        <xsd:documentation xml:lang="de">
          Beschreibungstext, zeigt den Ortsnamen an, wenn leer gelassen. "false" deaktiviert Anzeige
        </xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="detailItems" type="xsd:integer">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">
          Displays details when set to 1 (default) and hides them when set to 0
        </xsd:documentation>
        <xsd:documentation xml:lang="de">
          Anzeige von Details, wenn Wert 1 ist (Voreinstellung). 0 deaktiviert Anzeige
        </xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="forecast24hItems" type="xsd:integer">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">
          Number of items to show (0...8)
        </xsd:documentation>
        <xsd:documentation xml:lang="de">
          Anzahl der Einträge (0...8)
        </xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="forecastDailyItems" type="xsd:integer">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">
          Number of items to show (0...4)
        </xsd:documentation>
        <xsd:documentation xml:lang="de">
          Anzahl der Einträge (0...4)
        </xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="showSunrise" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">
          Show the sun rise and set information
        </xsd:documentation>
        <xsd:documentation xml:lang="de">
          Sonnen Auf- und Untergang anzeigen
        </xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="owID" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">
          OpenWeatherMap city ID as defined in https://bulk.openweathermap.org/sample/city.list.json.gz
        </xsd:documentation>
        <xsd:documentation xml:lang="de">
          OpenWeatherMap City ID aus https://bulk.openweathermap.org/sample/city.list.json.gz
        </xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="q" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">
          When owID is not used: City name and country code divided by comma, use ISO 3166 country codes
        </xsd:documentation>
        <xsd:documentation xml:lang="de">
          Wenn owID nicht verwendet wird: Ortsname und ISO 3166 Ländercode, durch Komma getrennt
        </xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="lat" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">
          When owID or q is not used: latitude of place
        </xsd:documentation>
        <xsd:documentation xml:lang="de">
          Wenn owID oder q nicht verwendet wird: Geografische Breite des Ortes
        </xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="lon" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">
          When owID or q is not used: longitude of place
        </xsd:documentation>
        <xsd:documentation xml:lang="de">
          Wenn owID oder q nicht verwendet wird: Geografische Länge des Ortes
        </xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="refresh" type="xsd:integer">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">
          Refresh interval of the data in minutes
        </xsd:documentation>
        <xsd:documentation xml:lang="de">
          Aktualisierungsintervall in Minuten
        </xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute ref="class" />
  </xsd:complexType>
  
  <!--
  #####################################################################################################################
  # END: Plugins
  #####################################################################################################################
  # -->
</xsd:schema>

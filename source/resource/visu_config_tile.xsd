        <xsd:documentation xml:lang="de">Zeile in der diese Entität platziert wird.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="column" type="xsd:integer">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Column this entity is placed in.</xsd:documentation>
        <xsd:documentation xml:lang="de">Spalte in der diese Entität platziert wird.</xsd:documentation>

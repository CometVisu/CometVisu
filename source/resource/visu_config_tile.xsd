<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:xml="http://www.w3.org/XML/1998/namespace">
  <xsd:include schemaLocation="config/custom_visu_config.xsd"/>
  <!-- root element -->
  <xsd:element name="config">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="cv-meta" type="cv-meta" minOccurs="0"/>
        <xsd:element name="header" type="header" minOccurs="0"/>
        <xsd:element name="main" type="main"/>
        <xsd:element name="footer" type="footer" minOccurs="0"/>
      </xsd:sequence>
      <xsd:attribute name="design" type="xsd:string" default="tile">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">Select the main design.</xsd:documentation>
          <xsd:documentation xml:lang="de">Hier wird das Design für die Visu ausgewählt</xsd:documentation>
        </xsd:annotation>
      </xsd:attribute>
      <xsd:attribute name="version" type="xsd:integer" use="required">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">Version of the CometVisu-library. This value is for the Upgrade-Script</xsd:documentation>
          <xsd:documentation xml:lang="de">Version der CometVisu-library. Dieser Wert ist für das Upgrade-Script</xsd:documentation>
          <xsd:appinfo>level:expert</xsd:appinfo>
        </xsd:annotation>
      </xsd:attribute>
      <xsd:attribute name="theme" default="dark">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">Choose between "light" and "dark" theme. "system" uses the system settings.</xsd:documentation>
          <xsd:documentation xml:lang="de">Umschalten zwischen "light" oder "dark" Theme. "system" übernimmt die Einstellungen des Systems.</xsd:documentation>
        </xsd:annotation>
        <xsd:simpleType>
          <xsd:restriction base="xsd:string">
            <xsd:enumeration value="system" />
            <xsd:enumeration value="dark" />
            <xsd:enumeration value="light" />
          </xsd:restriction>
        </xsd:simpleType>
      </xsd:attribute>
    </xsd:complexType>
  </xsd:element>

  <!-- meta area -->
  <xsd:complexType name="cv-meta">
    <xsd:choice minOccurs="0" maxOccurs="unbounded">
      <xsd:element name="cv-mapping" type="cv-mapping" minOccurs="0" maxOccurs="unbounded" />
      <xsd:element name="cv-styling" type="cv-styling" minOccurs="0" maxOccurs="unbounded" />
      <xsd:element name="cv-backend" type="cv-backend" minOccurs="0" maxOccurs="unbounded" />
      <xsd:element name="cv-loader" type="cv-loader" minOccurs="0" maxOccurs="unbounded" />
      <xsd:element name="cv-translations" type="cv-translations" minOccurs="0" />
      <xsd:element name="style" type="html-style" minOccurs="0" />
      <xsd:element name="cv-state-notification" type="cv-state-notification" minOccurs="0" />
    </xsd:choice>
  </xsd:complexType>

  <xsd:complexType name="cv-mapping">
    <xsd:sequence>
      <xsd:element name="formula" type="xsd:string" minOccurs="0" />
      <xsd:element name="entry" type="entry" minOccurs="0" maxOccurs="unbounded" />
    </xsd:sequence>
    <xsd:attribute name="name" type="xsd:string" use="required">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Name of the mapping</xsd:documentation>
        <xsd:documentation xml:lang="de">Name des Mappings</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="type" default="string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Type of the value</xsd:documentation>
        <xsd:documentation xml:lang="de">Datentyp des Werts</xsd:documentation>
      </xsd:annotation>
      <xsd:simpleType>
        <xsd:restriction base="xsd:string">
          <xsd:enumeration value="string" />
          <xsd:enumeration value="integer" />
          <xsd:enumeration value="float" />
          <xsd:enumeration value="boolean" />
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="cv-styling">
    <xsd:sequence>
      <xsd:element name="formula" type="xsd:string" minOccurs="0" />
      <xsd:element name="entry" type="entry" minOccurs="0" maxOccurs="unbounded" />
    </xsd:sequence>
    <xsd:attribute name="name" type="xsd:string" use="required">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Name of the styling</xsd:documentation>
        <xsd:documentation xml:lang="de">Name des Stylings</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="cv-translations">
    <xsd:sequence>
      <xsd:element name="language" type="language" minOccurs="0" maxOccurs="unbounded"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="language">
    <xsd:sequence>
      <xsd:element name="tr" minOccurs="0" maxOccurs="unbounded">
        <xsd:complexType>
          <xsd:simpleContent>
            <xsd:extension base="xsd:string">
              <xsd:attribute name="key" type="xsd:string" use="required">
                <xsd:annotation>
                  <xsd:documentation xml:lang="en">String to translate</xsd:documentation>
                  <xsd:documentation xml:lang="de">Der zu übersetzende Text</xsd:documentation>
                </xsd:annotation>
              </xsd:attribute>
            </xsd:extension>
          </xsd:simpleContent>
        </xsd:complexType>
      </xsd:element>
    </xsd:sequence>
    <xsd:attribute name="name" type="xsd:string" use="required">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Short form of the language (e.g. de or en)</xsd:documentation>
        <xsd:documentation xml:lang="de">Kürzel der Sprache (z.B. de oder en)</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="cv-icon">
    <xsd:simpleContent>
      <xsd:extension base="xsd:string">
        <xsd:attributeGroup ref="appearance-attributes" />
        <xsd:attribute name="size">
          <xsd:annotation>
            <xsd:documentation xml:lang="en">Defines the size of the icon.</xsd:documentation>
            <xsd:documentation xml:lang="de">Legt die Größe des Icons fest.</xsd:documentation>
          </xsd:annotation>
          <xsd:simpleType>
            <xsd:restriction base="xsd:string">
              <xsd:enumeration value="small" />
              <xsd:enumeration value="large" />
              <xsd:enumeration value="x-large" />
              <xsd:enumeration value="xx-large" />
              <xsd:enumeration value="xxx-large" />
            </xsd:restriction>
          </xsd:simpleType>
        </xsd:attribute>
        <xsd:attribute name="color" type="color">
          <xsd:annotation>
            <xsd:documentation xml:lang="en">Icon color.</xsd:documentation>
            <xsd:documentation xml:lang="de">Farbe des Icons.</xsd:documentation>
          </xsd:annotation>
        </xsd:attribute>
      </xsd:extension>
    </xsd:simpleContent>
  </xsd:complexType>

  <xsd:complexType name="cv-round-progress">
      <xsd:attribute name="radius" type="xsd:integer">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">Radius of the circle.</xsd:documentation>
          <xsd:documentation xml:lang="de">Radius des Kreises. </xsd:documentation>
        </xsd:annotation>
      </xsd:attribute>
      <xsd:attribute name="stroke" type="xsd:integer">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">Stroke width of the circle border.</xsd:documentation>
          <xsd:documentation xml:lang="de">Randbreite des Kreises.</xsd:documentation>
        </xsd:annotation>
      </xsd:attribute>
    <xsd:attributeGroup ref="appearance-attributes" />
      <xsd:attribute name="type">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">Visualization type.</xsd:documentation>
          <xsd:documentation xml:lang="de">Darstellungsart (Kreis: ``circle`` (default) oder Halbkreis: ``semiCircle``).</xsd:documentation>
        </xsd:annotation>
        <xsd:simpleType>
          <xsd:restriction base="xsd:string">
            <xsd:enumeration value="circle" />
            <xsd:enumeration value="semiCircle" />
          </xsd:restriction>
        </xsd:simpleType>
      </xsd:attribute>
    <xsd:attribute ref="min"/>
    <xsd:attribute ref="max"/>
    <xsd:attribute name="foreground-color" type="color">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Color of the value bar.</xsd:documentation>
        <xsd:documentation xml:lang="de">Farbe des Wertbalkens.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="background-color" type="color">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Color of the background bar.</xsd:documentation>
        <xsd:documentation xml:lang="de">Farbe des Hintergrundbalkens.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="cv-backend">
    <xsd:choice minOccurs="0" maxOccurs="unbounded">
      <xsd:element name="cv-resource" minOccurs="0" maxOccurs="unbounded">
        <xsd:complexType>
          <xsd:simpleContent>
            <xsd:extension base="xsd:token">
              <xsd:attribute name="name" type="xsd:string"/>
            </xsd:extension>
          </xsd:simpleContent>
        </xsd:complexType>
      </xsd:element>
    </xsd:choice>
    <xsd:attribute name="type" use="required">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Type of backend: ``knxd`` = KNXD, ``openhab`` = openHAB server, ``mqtt`` = MQTT-Broker, ``simulated`` = Simulated backend for testing</xsd:documentation>
        <xsd:documentation xml:lang="de">Typ des Backends: ``knxd`` = KNXD, ``openhab`` = openHAB Server, ``mqtt`` = MQTT-Broker, ``simulated`` = Simuliertes Backend zu Testzwecken. </xsd:documentation>
      </xsd:annotation>
      <xsd:simpleType>
        <xsd:restriction base="xsd:string">
          <xsd:enumeration value="knxd" />
          <xsd:enumeration value="openhab" />
          <xsd:enumeration value="mqtt" />
          <xsd:enumeration value="simulated" />
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
    <xsd:attribute name="name">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Optional name of this backend connection (default=main).</xsd:documentation>
        <xsd:documentation xml:lang="de">Optionaler Name dieser Backend-Verbindung (default=main).</xsd:documentation>
      </xsd:annotation>
      <xsd:simpleType>
        <xsd:restriction base="xsd:token">
          <!-- allow everything except the reserved 'system' -->
          <xsd:pattern value="[^s]*((s([^y])?)|(sy([^s])?)|(sys([^t])?)|(syste([^m])?))*"/>
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
    <xsd:attribute name="default" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Use this connection as default, all cv-address elements without "name"-Attribut will use this connection.</xsd:documentation>
        <xsd:documentation xml:lang="de">Diese Verbindung als Standard nehmen, alle cv-address Elemente ohne "name"-Attribut nutzen diese Verbindung.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="uri" type="xsd:anyURI">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">URL for the backend connection.</xsd:documentation>
        <xsd:documentation xml:lang="de">URL für die Verbindung zum Backend.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="username" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Backend username used to authenticate requests (can also be an access token).</xsd:documentation>
        <xsd:documentation xml:lang="de">Benutzername für Anfragen an das Backend (kann auch ein Token sein). </xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="password" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Backend password used to authenticate requests (if you use an access token as username a password is not required).</xsd:documentation>
        <xsd:documentation xml:lang="de">Passwort für Anfragen an das Backend (wenn ein Token als Benutzername verwendet wird, ist ein Passwort nicht erforderlich). </xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <!-- basic structure -->
  <xsd:complexType name="header">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element name="nav" type="nav" />
        <xsd:element name="custom" type="custom"/>
        <xsd:element name="cv-group" type="cv-group"/>
        <xsd:element name="cv-breadcrumbs" type="cv-breadcrumbs"/>
        <xsd:group ref="HTMLTextElements"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attributeGroup ref="appearance-attributes" />
  </xsd:complexType>

  <xsd:complexType name="footer">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element name="nav" type="nav" />
        <xsd:element name="custom" type="custom"/>
        <xsd:element name="cv-group" type="cv-group"/>
        <xsd:element name="cv-breadcrumbs" type="cv-breadcrumbs"/>
        <xsd:group ref="HTMLTextElements"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attributeGroup ref="appearance-attributes" />
  </xsd:complexType>

  <xsd:complexType name="nav">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element name="cv-menu" type="cv-menu" />
        <xsd:element name="custom" type="custom"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute ref="hide-on-scroll"/>
  </xsd:complexType>

  <xsd:complexType name="cv-menu">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element name="cv-menu-item" type="cv-menu-item" />
      </xsd:choice>
    </xsd:sequence>
    <xsd:attribute name="model">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Data-model this menu is generated from.</xsd:documentation>
        <xsd:documentation xml:lang="de">Datenmodell aus dem dieses Menü generiert wird.</xsd:documentation>
      </xsd:annotation>
      <xsd:simpleType>
        <xsd:restriction base="xsd:string">
          <xsd:enumeration value="pages" />
          <xsd:enumeration value="menuItems" />
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
    <xsd:attribute name="appearance" default="text">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Appearance of the menu.</xsd:documentation>
        <xsd:documentation xml:lang="de">Erscheinungsbild des Menüs.</xsd:documentation>
      </xsd:annotation>
      <xsd:simpleType>
        <xsd:restriction base="xsd:string">
          <xsd:enumeration value="text" />
          <xsd:enumeration value="icons" />
          <xsd:enumeration value="dock" />
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
    <xsd:attribute name="depth" type="xsd:integer" default="-1">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Depth of the menu. Value '-1' (default) includes all pages, '0' only for pages on the first level, and so on.</xsd:documentation>
        <xsd:documentation xml:lang="de">Tiefe des Menüs. Ein Wert von '-1' (default) bindet alle Seiten inkl. Unterseiten ein, ein Wert von '0' bindet nur die obersten Ebene ein usw.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="show-labels" type="xsd:boolean" default="true">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Controls the label visibility.</xsd:documentation>
        <xsd:documentation xml:lang="de">Steuert die Sichtbarkeit des Texts.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="cv-menu-item">
    <xsd:sequence>
      <xsd:choice maxOccurs="unbounded">
        <xsd:element name="cv-popup" type="cv-popup" />
        <xsd:element name="cv-address" type="address"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attribute name="name" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Name of the menu entry.</xsd:documentation>
        <xsd:documentation xml:lang="de">Name des Menü-Eintrags.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="icon" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Icon of the menu entry.</xsd:documentation>
        <xsd:documentation xml:lang="de">Icon des Menü-Eintrags.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="action">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">The action that is executed when this menu item has been clicked.</xsd:documentation>
        <xsd:documentation xml:lang="de">Die Aktion die ausgeführt wird, wenn dieser Menu-Eintrag angeklickt wird.</xsd:documentation>
      </xsd:annotation>
      <xsd:simpleType>
        <xsd:restriction base="xsd:string">
          <xsd:enumeration value="popup" />
          <xsd:enumeration value="toggleState" />
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="main">
    <xsd:sequence>
      <xsd:choice maxOccurs="unbounded">
        <xsd:element name="cv-page" type="cv-page" />
        <xsd:group ref="Widgets"/>
        <xsd:group ref="CustomWidgets"/>
        <xsd:group ref="HTMLTextElements"/>
        <xsd:element name="cv-group" type="cv-group"/>
        <xsd:element name="cv-popup" type="cv-popup"/>
        <xsd:element name="custom" type="custom"/>
        <xsd:element name="aside" type="aside" minOccurs="0" maxOccurs="2"/>
        <xsd:element name="iframe" type="iframe" minOccurs="0" />
      </xsd:choice>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="aside">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element name="nav" type="nav" />
        <xsd:element name="custom" type="custom"/>
        <xsd:element name="cv-group" type="cv-group"/>
        <xsd:group ref="HTMLTextElements"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute name="mobile" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Controls the visibility on small screens.</xsd:documentation>
        <xsd:documentation xml:lang="de">Steuert die Sichtbarkeit auf kleinen Bildschirmen.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <!-- define a page -->
  <xsd:complexType name="cv-page">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element name="cv-page" type="cv-page" />
        <xsd:group ref="Widgets"/>
        <xsd:group ref="CustomWidgets"/>
        <xsd:element name="cv-group" type="cv-group"/>
        <xsd:element name="cv-popup" type="cv-popup"/>
        <xsd:element name="custom" type="custom"/>
        <xsd:group ref="HTMLTextElements"/>
        <xsd:element name="iframe" type="iframe"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attribute name="id" type="xsd:string" use="required">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">ID of this page</xsd:documentation>
        <xsd:documentation xml:lang="de">ID der Seite</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="name" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Title of this page</xsd:documentation>
        <xsd:documentation xml:lang="de">Titel der Seite</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="icon" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Icon of this page in navigation menus</xsd:documentation>
        <xsd:documentation xml:lang="de">Icon der Seite in Navigationsmenüs</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute name="menu" type="xsd:boolean" default="true">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Defines if this page should be visible in the navigation menus.</xsd:documentation>
        <xsd:documentation xml:lang="de">Legt fest, ob diese Seite in den Navigationsmenüs enthalten sein soll.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="cv-popup">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:group ref="Widgets"/>
        <xsd:group ref="CustomWidgets"/>
        <xsd:group ref="Components"/>
        <xsd:element name="cv-group" type="cv-group"/>
        <xsd:element name="custom" type="custom"/>
        <xsd:element name="cv-address" type="address" minOccurs="0"/>
        <xsd:element name="iframe" type="iframe"/>
        <xsd:group ref="HTMLTextElements"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attribute name="modal" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Disables the background while the popup is open.</xsd:documentation>
        <xsd:documentation xml:lang="de">Deaktiviert den Hintergrund solange das Popup geöffnet ist.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="fullscreen" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Open the popup in fullscreen mode.</xsd:documentation>
        <xsd:documentation xml:lang="de">Das geöffnete Popup belegt den gesamten Bildschirm.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="title" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Headline of this popup.</xsd:documentation>
        <xsd:documentation xml:lang="de">Überschrift dieses Popups.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute name="auto-close-timeout" type="xsd:integer">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Time in seconds when the popup is automatically closed.</xsd:documentation>
        <xsd:documentation xml:lang="de">Zeit in Sekunden in der das Popup automatisch geschlossen wird.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="cv-breadcrumbs">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Breadcrumb menu.</xsd:documentation>
      <xsd:documentation xml:lang="de">Breadcrumb Menü.</xsd:documentation>
    </xsd:annotation>
    <xsd:attribute ref="hide-on-scroll"/>
  </xsd:complexType>

  <xsd:complexType name="cv-group">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element name="summary" type="summary"/>
        <xsd:group ref="Widgets"/>
        <xsd:group ref="CustomWidgets"/>
        <xsd:element name="cv-group" type="cv-group"/>
        <xsd:element name="custom" type="custom"/>
        <xsd:element name="cv-address" type="address"/>
        <xsd:element name="iframe" type="iframe"/>
        <xsd:group ref="HTMLTextElements"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attribute name="icon" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Icon for the group.</xsd:documentation>
        <xsd:documentation xml:lang="de">Icon für die Gruppe.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="name" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Name of the group.</xsd:documentation>
        <xsd:documentation xml:lang="de">Name der Gruppe.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="open" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Makes the groups content visible, otherwise only the content of "summary" is visible.</xsd:documentation>
        <xsd:documentation xml:lang="de">Macht den Inhalt der Gruppe sichtbar. Ansonsten ist nur der Inhalt von "summary" sichtbar.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="wrap" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Prevents line wraps when the content is wider that the screen size. The content will be horizontally scrollable instead.</xsd:documentation>
        <xsd:documentation xml:lang="de">Verhindert Zeilenumbrüche, wenn der Inhalt zu breit für die Bildschirmgröße ist. Stattdessen wird der Inhalt scrollbar.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute ref="hide-on-scroll"/>
  </xsd:complexType>

  <xsd:complexType name="cv-widget">
    <xsd:sequence>
        <xsd:element name="header" type="widget-header-footer" minOccurs="0" />
        <xsd:element name="cv-tile" type="cv-tile" />
      <xsd:element name="footer" type="widget-header-footer" minOccurs="0" />
    </xsd:sequence>
    <xsd:attribute name="size" type="tile-size" />
    <xsd:attributeGroup ref="appearance-attributes" />
  </xsd:complexType>

  <xsd:complexType name="widget-header-footer">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element name="cv-value" type="cv-value" />
        <xsd:group ref="HTMLTextElements"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attributeGroup ref="appearance-attributes" />
  </xsd:complexType>

  <xsd:complexType name="cv-tile">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="9">
        <xsd:group ref="Components"/>
        <xsd:element name="cv-row" type="cv-row" maxOccurs="3"/>
        <xsd:element name="cv-address" type="address" minOccurs="0"/>
        <xsd:element name="cv-popup" type="cv-popup" minOccurs="0"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute name="background-image" type="xsd:anyURI">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Background image for this tile.</xsd:documentation>
        <xsd:documentation xml:lang="de">Hintergrundbild für diese Kachel.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="cv-row">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="3">
        <xsd:group ref="Components"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attributeGroup ref="layout-attributes" />
    <xsd:attributeGroup ref="appearance-attributes" />
  </xsd:complexType>

  <!-- if you add a new widget, you need to list it here -->
  <xsd:group name="Widgets">
    <xsd:choice>
      <xsd:element name="cv-switch" type="cv-switch" />
      <xsd:element name="cv-dimmer" type="cv-dimmer" />
      <xsd:element name="cv-shutter" type="cv-shutter" />
      <xsd:element name="cv-widget" type="cv-widget"/>
      <xsd:element name="cv-info" type="cv-info"/>
      <xsd:element name="cv-status" type="cv-status"/>
      <xsd:element name="cv-status-chart" type="cv-status-chart"/>
      <xsd:element name="cv-small-status" type="cv-small-status"/>
      <xsd:element name="cv-rtc" type="cv-rtc"/>
      <xsd:element name="cv-widget-pair" type="cv-widget-pair"/>
      <xsd:element name="cv-media-player" type="cv-media-player"/>
      <xsd:element name="cv-energy" type="cv-energy"/>
    </xsd:choice>
  </xsd:group>

  <xsd:group name="Components">
    <xsd:choice>
      <xsd:element name="cv-button" type="cv-button" />
      <xsd:element name="cv-value" type="cv-value" />
      <xsd:element name="cv-select" type="cv-select" />
      <xsd:element name="cv-slider" type="cv-slider" />
      <xsd:element name="cv-spinner" type="cv-spinner" />
      <xsd:element name="cv-image" type="cv-image" />
      <xsd:element name="cv-chart" type="cv-chart" />
      <xsd:element name="cv-list" type="cv-list" />
      <xsd:element name="cv-color" type="cv-color" />
      <xsd:element name="cv-icon" type="cv-icon" />
      <xsd:element name="label" type="label"/>
      <xsd:element name="p" type="p"/>
      <xsd:element name="cv-plugin" type="cv-plugin"/>
      <xsd:element name="cv-menu" type="cv-menu"/>
      <xsd:element name="custom" type="custom"/>
    </xsd:choice>
  </xsd:group>

  <xsd:group name="HTMLTextElements">
    <xsd:choice>
      <xsd:element name="h1" type="text" />
      <xsd:element name="h2" type="text" />
      <xsd:element name="h3" type="text" />
      <xsd:element name="h4" type="text" />
      <xsd:element name="label" type="label"/>
      <xsd:element name="p" type="p"/>
    </xsd:choice>
  </xsd:group>

  <xsd:complexType name="cv-value">
    <xsd:sequence>
      <xsd:choice maxOccurs="unbounded">
        <xsd:element name="cv-address" type="address" maxOccurs="unbounded"/>
        <xsd:element name="p" type="p" maxOccurs="3" minOccurs="0" />
        <xsd:element name="label" type="label" minOccurs="0" />
        <xsd:element name="meter" type="meter" minOccurs="0" />
        <xsd:element name="cv-icon" type="cv-icon" minOccurs="0" />
        <xsd:element name="cv-round-progress" type="cv-round-progress" minOccurs="0" />
      </xsd:choice>
    </xsd:sequence>
    <xsd:attribute ref="styling" />
    <xsd:attribute ref="mapping" />
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute ref="format" />
    <xsd:attributeGroup ref="layout-attributes" />
  </xsd:complexType>

  <xsd:complexType name="cv-button">
    <xsd:sequence>
      <xsd:choice maxOccurs="unbounded">
        <xsd:element name="cv-address" type="address" maxOccurs="unbounded"/>
        <xsd:element name="cv-icon" type="cv-icon" minOccurs="0"/>
        <xsd:element name="p" type="p" maxOccurs="3" minOccurs="0" />
        <xsd:element name="label" type="label" minOccurs="0" />
      </xsd:choice>
    </xsd:sequence>
    <xsd:attribute ref="styling" />
    <xsd:attribute ref="mapping" />
    <xsd:attribute name="progress-mapping" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Map the bus value to a different value, text or symbol for displaying. See also :ref:`mapping`</xsd:documentation>
        <xsd:documentation xml:lang="de">Ordnet den Werten vom Bus andere Werte, Texte oder Symbole zur Anzeige zu. Siehe auch :ref:`Mapping &lt;mapping&gt;`</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute ref="format" />
    <xsd:attributeGroup ref="layout-attributes" />
    <xsd:attribute name="size" type="button-size" />
    <xsd:attribute name="name" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Additional label for the button.</xsd:documentation>
        <xsd:documentation xml:lang="de">Zusätzliche Beschriftung für den Button.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute ref="whole-tile" />
    <xsd:attribute name="doc-link" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Link into the CometVisu documentation (used in the demo config)</xsd:documentation>
        <xsd:documentation xml:lang="de">Link in die CometVisu-Dokumentation (wird in der Demo-Config benutzt).</xsd:documentation>
        <xsd:appinfo>level:expert</xsd:appinfo>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="cv-slider">
    <xsd:sequence>
      <xsd:choice maxOccurs="unbounded">
        <xsd:element name="cv-address" type="address" maxOccurs="unbounded"/>
        <xsd:element name="cv-icon" type="cv-icon" minOccurs="0" />
      </xsd:choice>
    </xsd:sequence>
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute ref="format" />
    <xsd:attributeGroup ref="layout-attributes" />
    <xsd:attribute ref="min"/>
    <xsd:attribute ref="max"/>
    <xsd:attribute ref="step-width" />
    <xsd:attribute name="throttle-interval" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Defines the interval used for sending changes to the backend.</xsd:documentation>
        <xsd:documentation xml:lang="de">Legt das Sende-Interval in dem Wertänderungen an das Backend geschickt werden fest.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="hide-value" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Controls if the value is shown a text above the slider.</xsd:documentation>
        <xsd:documentation xml:lang="de">Steuert ob der Wert als Text über dem Slider angezeigt wird oder nicht.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="cv-spinner">
    <xsd:sequence>
      <xsd:choice maxOccurs="unbounded">
        <xsd:element name="cv-address" type="address" maxOccurs="unbounded"/>
        <xsd:element name="cv-icon" type="cv-icon" minOccurs="0" />
        <xsd:element name="label" type="label" minOccurs="0" />
      </xsd:choice>
    </xsd:sequence>
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute ref="format" />
    <xsd:attributeGroup ref="layout-attributes" />
    <xsd:attribute ref="min"/>
    <xsd:attribute ref="max"/>
    <xsd:attribute ref="step-width" />
  </xsd:complexType>

  <xsd:complexType name="cv-image">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element name="cv-address" type="address" maxOccurs="unbounded"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute name="src" type="xsd:string"/>
    <xsd:attribute ref="refresh" />
    <xsd:attributeGroup ref="proxy-attributes"/>
  </xsd:complexType>

  <xsd:complexType name="cv-chart">
    <xsd:sequence>
      <xsd:choice maxOccurs="unbounded">
        <xsd:element name="dataset" type="dataset"/>
        <xsd:element name="h-line" type="line"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attribute name="title" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Title of the chart.</xsd:documentation>
        <xsd:documentation xml:lang="de">Titel des Charts.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute name="y-format" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Format of the y-axis.</xsd:documentation>
        <xsd:documentation xml:lang="de">Formatierung der y-Achse.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="x-format" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Format of the x-axis.</xsd:documentation>
        <xsd:documentation xml:lang="de">Formatierung der x-Achse.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attributeGroup ref="layout-attributes" />
    <xsd:attribute ref="series" />
    <xsd:attribute name="selection" type="series-selection" />
    <xsd:attribute name="allow-fullscreen" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Allows showing the chart in fullscreen size.</xsd:documentation>
        <xsd:documentation xml:lang="de">Erlaubt die Vergrößerung des Charts auf volle Bildschirmgröße.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="show-x-axis" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Show x-axis scale (default = true).</xsd:documentation>
        <xsd:documentation xml:lang="de">X-Achsen Skala anzeigen (default = true).</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="show-y-axis" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Show y-axis scale (default = true).</xsd:documentation>
        <xsd:documentation xml:lang="de">Y-Achsen Skala anzeigen (default = true).</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute ref="refresh"/>
    <xsd:attribute name="show-grid">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Show grid lines.</xsd:documentation>
        <xsd:documentation xml:lang="de">Zeige Gitterlinien.</xsd:documentation>
      </xsd:annotation>
      <xsd:simpleType>
        <xsd:restriction base="xsd:string">
          <xsd:enumeration value="xy" />
          <xsd:enumeration value="x" />
          <xsd:enumeration value="y" />
          <xsd:enumeration value="false" />
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
    <xsd:attribute name="background" type="xsd:boolean" default="false">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Show the chart in the background of a tile.</xsd:documentation>
        <xsd:documentation xml:lang="de">Zeigt den Chart im Hintergrund einer Kachel.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute ref="zero-based" />
  </xsd:complexType>

  <xsd:complexType name="cv-list">
    <xsd:sequence>
      <xsd:choice maxOccurs="unbounded">
        <xsd:element name="header" minOccurs="0" type="custom"/>
        <xsd:element name="template" maxOccurs="2">
          <xsd:complexType>
            <xsd:complexContent>
              <xsd:extension base="template">
                <xsd:attribute name="when">
                  <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                      <xsd:enumeration value="empty" />
                    </xsd:restriction>
                  </xsd:simpleType>
                </xsd:attribute>
              </xsd:extension>
            </xsd:complexContent>
          </xsd:complexType>
        </xsd:element>
        <xsd:element name="model">
          <xsd:complexType>
            <xsd:choice maxOccurs="unbounded">
              <xsd:element name="script" minOccurs="0"/>
              <xsd:element name="cv-address" type="address" minOccurs="0" maxOccurs="unbounded"/>
              <xsd:element name="cv-data" minOccurs="0" maxOccurs="unbounded">
                <xsd:complexType>
                  <xsd:anyAttribute processContents="skip"/>
                </xsd:complexType>
              </xsd:element>
            </xsd:choice>
            <xsd:attribute name="src" type="xsd:anyURI">
              <xsd:annotation>
                <xsd:documentation xml:lang="en">URL from where the model should be loaded (must return JSON).</xsd:documentation>
                <xsd:documentation xml:lang="de">URL von der das Modell geladen werden soll (muss JSON zurückliefern).</xsd:documentation>
              </xsd:annotation>
            </xsd:attribute>
            <xsd:attributeGroup ref="proxy-attributes"/>
            <xsd:attribute name="limit" type="xsd:positiveInteger">
              <xsd:annotation>
                <xsd:documentation xml:lang="en">Limits the model entries</xsd:documentation>
                <xsd:documentation xml:lang="de">Limitiert die Einträge des Modells.</xsd:documentation>
              </xsd:annotation>
            </xsd:attribute>
            <xsd:attribute name="sort-by" type="xsd:string"/>
            <xsd:attribute name="sort-mode" default="asc">
              <xsd:simpleType>
                <xsd:restriction base="xsd:string">
                  <xsd:enumeration value="asc"/>
                  <xsd:enumeration value="desc"/>
                </xsd:restriction>
              </xsd:simpleType>
            </xsd:attribute>
            <xsd:attribute name="filter" type="xsd:string"/>
            <xsd:attribute name="class">
              <xsd:annotation>
                <xsd:documentation xml:lang="en">Special builtin list models that are included in the CometVisu.</xsd:documentation>
                <xsd:documentation xml:lang="de">Spezielles Listenmodell, welches die CometVisu mitliefert.</xsd:documentation>
              </xsd:annotation>
              <xsd:simpleType>
                <xsd:restriction base="xsd:string">
                  <xsd:enumeration value="FritzCallList"/>
                  <xsd:enumeration value="RssLog"/>
                </xsd:restriction>
              </xsd:simpleType>
            </xsd:attribute>
            <xsd:attribute name="parameters" type="xsd:string">
              <xsd:annotation>
                <xsd:documentation xml:lang="en">Parameter for the class list models.</xsd:documentation>
                <xsd:documentation xml:lang="de">Parameter für die class Listenmodelle.</xsd:documentation>
              </xsd:annotation>
            </xsd:attribute>
          </xsd:complexType>
        </xsd:element>
        <xsd:element name="cv-address" type="address" maxOccurs="unbounded"/>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute ref="refresh" />
    <xsd:attribute ref="rowspan"/>
    <xsd:attribute ref="colspan"/>
  </xsd:complexType>

  <xsd:complexType name="cv-select">
    <xsd:sequence>
      <xsd:choice maxOccurs="unbounded">
        <xsd:element name="cv-address" type="address" maxOccurs="unbounded"/>
        <xsd:element name="cv-option" maxOccurs="unbounded">
          <xsd:complexType mixed="true">
            <xsd:choice maxOccurs="unbounded">
              <xsd:element name="cv-icon" type="cv-icon" minOccurs="0"/>
            </xsd:choice>
            <xsd:attribute name="key" type="xsd:string"/>
          </xsd:complexType>
        </xsd:element>
      </xsd:choice>
    </xsd:sequence>
    <xsd:attribute ref="styling" />
    <xsd:attribute ref="mapping" />
    <xsd:attribute ref="format" />
    <xsd:attributeGroup ref="layout-attributes" />
    <xsd:attributeGroup ref="appearance-attributes" />
  </xsd:complexType>

  <xsd:complexType name="cv-color">
    <xsd:sequence>
      <xsd:choice maxOccurs="unbounded">
        <xsd:element name="cv-address" maxOccurs="unbounded">
          <xsd:complexType>
            <xsd:simpleContent>
              <xsd:extension base="address">
                <xsd:attribute name="variant">
                  <xsd:annotation>
                    <xsd:documentation xml:lang="en">Type of coding of the color values that the backend expects.</xsd:documentation>
                    <xsd:documentation xml:lang="de">Kodierungsart in der die Farbwerte vom Backend über diese Adresse geschickt werden.</xsd:documentation>
                  </xsd:annotation>
                  <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                      <xsd:enumeration value="rgb" />
                      <xsd:enumeration value="RGB-r" />
                      <xsd:enumeration value="RGB-g" />
                      <xsd:enumeration value="RGB-b" />
                      <xsd:enumeration value="rgbw" />
                      <xsd:enumeration value="RGBW-r" />
                      <xsd:enumeration value="RGBW-g" />
                      <xsd:enumeration value="RGBW-b" />
                      <xsd:enumeration value="RGBW-w" />
                      <xsd:enumeration value="hsv" />
                      <xsd:enumeration value="h" />
                      <xsd:enumeration value="s" />
                      <xsd:enumeration value="v" />
                      <xsd:enumeration value="xy" />
                      <xsd:enumeration value="xyY" />
                      <xsd:enumeration value="x" />
                      <xsd:enumeration value="y" />
                      <xsd:enumeration value="Y" />
                    </xsd:restriction>
                  </xsd:simpleType>
                </xsd:attribute>
              </xsd:extension>
            </xsd:simpleContent>
          </xsd:complexType>
        </xsd:element>
        <xsd:element name="cv-icon" type="cv-icon" minOccurs="0" />
      </xsd:choice>
    </xsd:sequence>
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attributeGroup ref="layout-attributes" />
    <xsd:attribute name="title" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Title of this popup</xsd:documentation>
        <xsd:documentation xml:lang="de">Titel des Popups</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="throttle-interval" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Defines the interval used for sending changes to the backend.</xsd:documentation>
        <xsd:documentation xml:lang="de">Legt das Sende-Interval in dem Wertänderungen an das Backend geschickt werden fest.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="controls" type="xsd:string" default="triangle">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">List of controls to show (separated by semicolons)</xsd:documentation>
        <xsd:documentation xml:lang="de">Liste the darzustellenden Kontrollelemente (durch Strichpunkte getrennt)</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="r_x" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">x coordinate of the red channel in the CIE xyY color space</xsd:documentation>
        <xsd:documentation xml:lang="de">x Koordinate des roten Kanals im CIE xyY Farbraum</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="r_y" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">y coordinate of the red channel in the CIE xyY color space</xsd:documentation>
        <xsd:documentation xml:lang="de">y Koordinate des roten Kanals im CIE xyY Farbraum</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="r_wavelength" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Wavelength in nanometers of the red channel</xsd:documentation>
        <xsd:documentation xml:lang="de">Wellenlänge in Nanometern des roten Kanals</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="r_strength" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Maximal strength of the red channel</xsd:documentation>
        <xsd:documentation xml:lang="de">Maximale Stärke des roten Kanals</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="r_curve" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Dim curve of the red channel</xsd:documentation>
        <xsd:documentation xml:lang="de">Dim-Kurve des roten Kanals</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="r_scale" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Scaling of the dim curve of the red channel</xsd:documentation>
        <xsd:documentation xml:lang="de">Skalierung der Dim-Kurve des roten Kanals</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="g_x" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">x coordinate of the green channel in the CIE xyY color space</xsd:documentation>
        <xsd:documentation xml:lang="de">x Koordinate des grünen Kanals im CIE xyY Farbraum</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="g_y" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">y coordinate of the green channel in the CIE xyY color space</xsd:documentation>
        <xsd:documentation xml:lang="de">y Koordinate des grünen Kanals im CIE xyY Farbraum</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="g_wavelength" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Wavelength in nanometers of the green channel</xsd:documentation>
        <xsd:documentation xml:lang="de">Wellenlänge in Nanometern des grünen Kanals</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="g_strength" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Maximal strength of the green channel</xsd:documentation>
        <xsd:documentation xml:lang="de">Maximale Stärke des grünen Kanals</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="g_curve" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Dim curve of the green channel</xsd:documentation>
        <xsd:documentation xml:lang="de">Dim-Kurve des grünen Kanals</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="g_scale" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Scaling of the dim curve of the green channel</xsd:documentation>
        <xsd:documentation xml:lang="de">Skalierung der Dim-Kurve des grünen Kanals</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="b_x" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">x coordinate of the blue channel in the CIE xyY color space</xsd:documentation>
        <xsd:documentation xml:lang="de">x Koordinate des blauen Kanals im CIE xyY Farbraum</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="b_y" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">y coordinate of the blue channel in the CIE xyY color space</xsd:documentation>
        <xsd:documentation xml:lang="de">y Koordinate des blauen Kanals im CIE xyY Farbraum</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="b_wavelength" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Wavelength in nanometers of the blue channel</xsd:documentation>
        <xsd:documentation xml:lang="de">Wellenlänge in Nanometern des blauen Kanals</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="b_strength" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Maximal strength of the blue channel</xsd:documentation>
        <xsd:documentation xml:lang="de">Maximale Stärke des blauen Kanals</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="b_curve" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Dim curve of the blue channel</xsd:documentation>
        <xsd:documentation xml:lang="de">Dim-Kurve des blauen Kanals</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="b_scale" type="xsd:decimal">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Scaling of the dim curve of the blue channel</xsd:documentation>
        <xsd:documentation xml:lang="de">Skalierung der Dim-Kurve des blauen Kanals</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="w_x" type="xsd:decimal">

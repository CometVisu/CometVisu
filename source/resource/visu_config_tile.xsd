        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="cv-power-entity">
    <xsd:sequence>
      <xsd:element name="cv-address" type="address"/>
    </xsd:sequence>
    <xsd:attribute name="id" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">ID of this entity.</xsd:documentation>
        <xsd:documentation xml:lang="de">ID dieser Entität.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="type">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Type of this entity.</xsd:documentation>
        <xsd:documentation xml:lang="de">Typ dieser Entität.</xsd:documentation>
      </xsd:annotation>
        <xsd:simpleType>
          <xsd:restriction base="xsd:string">
            <xsd:enumeration value="pv" />
            <xsd:enumeration value="battery" />
            <xsd:enumeration value="grid" />
            <xsd:enumeration value="consumer" />
            <xsd:enumeration value="charger" />
            <xsd:enumeration value="heatpump" />
            <xsd:enumeration value="house" />
          </xsd:restriction>
        </xsd:simpleType>

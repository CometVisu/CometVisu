        <xsd:documentation xml:lang="en">Title of the popup.</xsd:documentation>
        <xsd:documentation xml:lang="de">Überschrift des Popups.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute ref="zero-based" />
  </xsd:complexType>


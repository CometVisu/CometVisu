        <xsd:documentation xml:lang="en">Connect to another cv-power-entity.</xsd:documentation>
        <xsd:documentation xml:lang="de">Verbindung zu anderer cv-power-entity herstellen.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="connect-from" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Connect from another cv-power-entity.</xsd:documentation>
        <xsd:documentation xml:lang="de">Verbindung von anderer cv-power-entity herstellen.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="connection-points">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Define where the connection line should start and end.</xsd:documentation>
        <xsd:documentation xml:lang="de">Legt fest wo die Verbindungslinie starten und enden sill</xsd:documentation>
      </xsd:annotation>
      <xsd:simpleType>
        <xsd:restriction base="xsd:token">
          <!-- allow everything except the reserved 'system' -->
          <xsd:pattern value="auto|(top|right|bottom|left|auto)-(top|right|bottom|left|auto)"/>
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
    <xsd:attribute name="row" type="xsd:integer">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Row this entity is placed in.</xsd:documentation>
        <xsd:documentation xml:lang="de">Zeile in der diese Entität platziert wird.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="column" type="xsd:integer">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Column this entity is placed in.</xsd:documentation>
        <xsd:documentation xml:lang="de">Spalte in der diese Entität platziert wird.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="icon" type="xsd:string">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Defines the icon, usually the icon is pre-defined by the type, but can by overridden by this attribute.</xsd:documentation>
        <xsd:documentation xml:lang="de">Icon festlegen, wird automatisch von Typ festgelegt und kann hiermit überschrieben werden.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="styling" ref="styling"/>
    <xsd:attribute name="mapping" ref="mapping"/>
  </xsd:complexType>

  <xsd:complexType name="cv-energy">
    <xsd:sequence>
      <xsd:element name="cv-power-entity" type="cv-power-entity" maxOccurs="unbounded" />
      <xsd:element name="cv-energy-entity" type="cv-energy-entity" maxOccurs="unbounded" />
    </xsd:sequence>
    <xsd:attribute name="size" type="tile-size" />
    <xsd:attributeGroup ref="appearance-attributes" />
    <xsd:attribute name="view-box">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Viewbox of the grid (start-column start-row columns rows).</xsd:documentation>
        <xsd:documentation xml:lang="de">Viewbox des Grids (start-column start-row columns rows).</xsd:documentation>
      </xsd:annotation>
      <xsd:simpleType>
        <xsd:restriction base="xsd:token">
          <xsd:pattern value="\d+ \d+ \d+ \d+"/>
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
    <xsd:attribute name="pan" type="xsd:boolean">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">If only a part of the energy-grid is shown, this flag activates scrolling inside the grid.</xsd:documentation>
        <xsd:documentation xml:lang="de">Wenn über die ViewBox nur ein Teil des Energiemanagements angezeigt wird, kann man mit pan das Scrollen innerhalb aktivieren.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="rows" type="xsd:integer">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Number of rows used to lay out the content.</xsd:documentation>
        <xsd:documentation xml:lang="de">Anzahl der Zeilen, in der die Inhalte angeordnet werden können.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="columns" type="xsd:integer">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Number of columns used to lay out the content.</xsd:documentation>
        <xsd:documentation xml:lang="de">Anzahl der Spalten, in der die Inhalte angeordnet werden können.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="cell-width" type="xsd:integer">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Width of a single cell in the layout.</xsd:documentation>
        <xsd:documentation xml:lang="de">Breite einer einzelnen Zelle im Layout.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="cell-height" type="xsd:integer">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Height of a single cell in the layout.</xsd:documentation>
        <xsd:documentation xml:lang="de">Höhe einer einzelnen Zelle im Layout.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="outer-padding" type="xsd:integer">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Spacing of the content to the outer edge.</xsd:documentation>
        <xsd:documentation xml:lang="de">Abstand des Inhalts zum äußeren Rand.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="spacing" type="xsd:integer">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Distance between single cells in the layout.</xsd:documentation>
        <xsd:documentation xml:lang="de">Abstand zwischen den Zellen im Layout.</xsd:documentation>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>
